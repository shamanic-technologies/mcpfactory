{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "./apps/emailgeneration-service/Dockerfile",
    "watchPatterns": [
      "/apps/emailgeneration-service/**",
      "/packages/shared/**",
      "/pnpm-lock.yaml"
    ]
  },
  "deploy": {
    "healthcheckPath": "/health",
    "healthcheckTimeout": 10
  }
}
